<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
	<!-- REPOS -->
	<addon id="repository.sutekh" name="TimeyWimeys's Sutekh Repository" provider-name="TimeyWimeys" version="1.0.0">
	<extension point="xbmc.addon.repository" name="TimeyWimeys's Sutekh Repository">
		<requires>
			<import addon="xbmc.addon" version="12.0.0"/>
		</requires>
		<dir minversion="20.0.0" maxversion="20.9.0">
			<info compressed="false">https://raw.githubusercontent.com/TimeyWimeys/repository.sutekh/main/nexus/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/TimeyWimeys/repository.sutekh/main/nexus/addons.xml.md5</checksum>
			<datadir zip="true">https://raw.githubusercontent.com/TimeyWimeys/repository.sutekh/main/nexus/</datadir>
		</dir>
		<dir minversion="20.9.1">
			<info compressed="false">https://raw.githubusercontent.com/TimeyWimeys/repository.sutekh/main/omega/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/TimeyWimeys/repository.sutekh/main/omega/addons.xml.md5</checksum>
			<datadir zip="true">https://raw.githubusercontent.com/TimeyWimeys/repository.sutekh/main/omega/</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">TimeyWimeys's Sutekh Repository</summary>
		<description lang="en">A repository with all the add-ons by TimeyWimeys.</description>
		<description lang="nl">Een repository met alle add-ons van TimeyWimeys.</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.png</fanart>
		</assets>
	</extension>
	</addon>
		
	<!-- SUTEKH SKIN -->
	<addon id="skin.sutekh" version="0.0.1" name="TimeyWimeys's Sutekh skin" provider-name="TimeyWimeys">
		<requires>
			<import version="5.17.0" addon="xbmc.gui"/>
			<import addon="script.bingie.helper" version="1.1.2"/>
			<import addon="script.skinshortcuts" version="2.1.0"/>
			<import addon="script.skin.helper.service" version="1.30.0"/>
			<import addon="script.skin.helper.widgets" version="1.30.0"/>
			<import addon="script.skin.helper.backgrounds" version="1.0.36"/>
			<import addon="resource.images.skinbackgrounds.titanium" version="1.0.0"/>
			<import addon="resource.images.skinicons.wide" version="1.0.5"/>
			<import addon="resource.images.backgroundoverlays.basic" version="1.0.0"/>
			<import addon="resource.images.studios.coloured" version="0.0.23" />
			<import addon="plugin.video.themoviedb.helper" version="5.2.12" />
			<import addon="plugin.program.autocompletion" version="2.1.2" />
			<import addon="plugin.video.youtube" version="7.0.2.2" />
		</requires>
		<extension point="xbmc.gui.skin" debugging="false">
			<res width="1920" height="1080" aspect="16:9" default="true" folder="xml" />
			<res width="1920" height="1200" aspect="16:10" default="false" folder="xml" />
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary lang="en_GB">Sutekh, a port of the Titan Bingie Mod skin for Doctor Who fanatics.</summary>
